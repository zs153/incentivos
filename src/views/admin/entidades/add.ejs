<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Entidades</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- styles -->
  <!-- <link rel="stylesheet" href="/css/styles.css"> -->
  <link rel="stylesheet" href="/css/estilos-1.css">
  <link rel="stylesheet" href="/css/navbarNew.css">
  <link rel="stylesheet" href="/css/navNew.css">
</head>
<body class="antialiased">
  <div class="wrapper">
    <%- include('../../partials/headerSesion') %>
    <%- include('../../partials/navbar', {opcion: 'ENTIDADES'}) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card mt-3">
                <form action="#" id="add" method="POST" onsubmit="return validate();">
                  <div class="card-header">
                    <h3 class="card-title">Entidad</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-4">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">CIF</label>
                            <input type="text" name="nifent" id="nifent" class="form-control"
                              style="text-transform: uppercase;" value="" autofocus />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-8">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Entidad</label>
                            <input type="text" name="desent" id="desent" class="form-control"
                              style="text-transform: uppercase;" value="" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-6">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Administraci√≥n</label>
                            <input type="text" name="adment" id="adment" class="form-control"
                              style="text-transform: uppercase;" value="" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>                        
                      <div class="col-6">
                        <div class="mb-1">
                          <div class="input-control">
                            <div class="form-label required">Tipo</div>
                            <select class="form-select form-control" id="cbotip" name="tipinc" value="">
                              <option value="0">SELECCIONE TIPO</option>
                              <% datos.arrTiposIncentivo.map(element=> { %>
                              <option value="<%= element.id %>">
                                <%= element.des %>
                              </option>
                              <% }) %>
                            </select>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <input class="btn btn-white" action="action" onclick="window.history.go(-1); return false;" type="submit" value="Cancelar" />
                      <button type="submit" class="btn btn-success ms-auto" id="btnInsert">Crear nueva entidad</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/util.js"></script>
  <script src="/js/admin/entidades/addEdit.js"></script>
  <script>
    const elemAdd = document.getElementById('add');
    elemAdd.setAttribute('action', `/admin/entidades/insert?part=${getCookie('filtro')}`)
  </script>
</body>

</html>