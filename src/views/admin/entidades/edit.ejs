<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Entidad</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon" />
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card mt-3">
                <form action="#" id="upd" method="POST" onsubmit="return validate();">
                  <input type="hidden" name="identi" id="identi" value="<%- datos.entidad.IDENTI %>">
                  <div class="card-header">
                    <h3 class="card-title">Entidad</h3>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-2">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">CIF</label>
                            <input type="text" name="nifent" id="nifent" class="form-control"
                              style="text-transform: uppercase;" value="<%- datos.entidad.NIFENT %>" autofocus />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-8">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Entidad</label>
                            <input type="text" name="desent" id="desent" class="form-control"
                              style="text-transform: uppercase;" value="<%- datos.entidad.DESENT %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-2">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Administración</label>
                            <input type="text" name="adment" id="adment" class="form-control"
                              style="text-transform: uppercase;" value="<%- datos.entidad.ADMENT %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-10">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Observación</label>
                            <input type="text" name="obsent" id="obsent" class="form-control" value="<%- datos.entidad.OBSENT %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-2">
                        <div class="mb-1">
                          <div class="input-control">
                            <div class="form-label required">Consta en 182</div>
                            <select class="form-select form-control" id="cbosta" name="staent" value="<%- datos.entidad.STAENT %>">
                              <option value="1" <%- datos.entidad.STAENT === 1 ? " selected" : "" %>>Sí</option>
                              <option value="2" <%- datos.entidad.STAENT === 2 ? " selected" : "" %>>No</option>
                            </select>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <input class="btn btn-white" action="action" onclick="window.history.go(-1); return false;" type="submit" value="Cancelar" />
                      <button type="submit" class="btn btn-success ms-auto" id="btnUpdate">Actualizar entidad</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </div>

  <script src="/js/ayuda.min.js"></script>
  <script src="/js/admin/addEditEntidad.js"></script>
  <script>
    const elemUpd = document.getElementById('upd');
    elemUpd.setAttribute('action', `/admin/entidades/update?part=${getCookie('filtro')}`)
  </script>
</body>

</html>